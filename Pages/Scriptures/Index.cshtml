@page "{searchString?}"
@model MyScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Add New Scripture</a>
</p>
<form>
    <p>
        <select asp-for="ScriptureBook" asp-items="Model.Books">
            <option value="">All Books</option>
        </select>
        <input type="text" asp-for="SearchString" placeholder="Keyword in notes" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].EntryDate) <a class="sort" asp-page="./Index" asp-route-sortOrder="@Model.DateSort">▼</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Book) <a class="sort" asp-page="./Index" asp-route-sortOrder="@Model.BookSort">▼</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-info">Details</a> 
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
